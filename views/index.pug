extends layout

block content
  h1= title
  p This is my second #{title} server.
  button(type='button' class='btn btn-primary btn-md' onclick='update()') Press Me
  div(id='target') Display
  script.
    let client_count = 0;
    function update(){
      client_count++
      document.getElementById("target").innerHTML = `Value now ${client_count}`
    }